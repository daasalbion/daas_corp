        }
        else{

            return true;
        }
    }

    $(document).on('pageinit', function(){

        $("a").click(function (event) {
            event.preventDefault();
            window.location = $(this).attr("href");
        });

        $('#max').html(max_chars);

        $('#mensaje').keyup(function() {

